{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",  // Đảm bảo baseUrl trỏ về thư mục gốc
    "paths": {
      "@/*": ["./*"],  // Alias cho tất cả các thư mục
      "@components/*": ["components/*"]  // Alias cho thư mục components
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
